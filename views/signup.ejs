<!DOCTYPE html>
<html lang="en">
  <%- include('./inc/head') %>
  <body>
    <div class="container app mt-5">
      <h4>Sign Up</h4>

      <hr class="my-4" />
      <div class="row">
        <form
          id="form"
          action="/login"
          method="post"
          class="col-xs-12 col-sm-12 col-md-8 col-lg-6"
        >
          <div class="form-group">
            <label>Email address</label>
            <input
              type="email"
              name="email"
              class="form-control"
              placeholder="Enter email"
              required
            />
            <small class="form-text text-danger"></small>
          </div>
          <div class="form-group">
            <label>Password</label>
            <input
              type="password"
              name="password"
              class="form-control"
              placeholder="Password"
              required
            />
            <small class="form-text text-danger"></small>
          </div>
          <div class="form-group">
            <label>Name</label>
            <input
              type="name"
              name="name"
              class="form-control"
              placeholder="name"
              required
            />
            <small class="form-text text-danger"></small>
          </div>
          <div class="form-group">
            <div class="leader">
              Вы уже зарегистрированы ? <a href="/signin">here</a>.
            </div>
          </div>
          <button type="submit" class="btn btn-dark btn-block">Создать</button>
        </form>
      </div>
    </div>
    <script>
      const form = document.getElementById("form");

      // Добавляем обработчик события submit
      form.addEventListener("submit", function (event) {
        // Предотвращаем стандартное действие отправки формы
        event.preventDefault();

        // Получаем значения полей формы
        var password = event.target.password.value;
        var email = event.target.email.value;
        var name = event.target.name.value;

        fetch("http://localhost:3000/signup", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            // другие заголовки, если нужно
          },
          body: JSON.stringify({
            email,
            password,
            name,
            // другие данные для отправки
          }),
        })
          .then((response) => {
            form.reset();

            if (!response.ok) {
              throw new Error("ошибка в чем то");
            }

            return response.json();
          })
          .then((data) => console.log(data))
          .catch((error) => {
            alert("Ошибка: " + error.message);
            console.error("Ошибка:", error);
          });

        // Выполняем какие-то действия с данными, например, отправляем их на сервер
        // ...

        // Очищаем поля формы
        //
      });
    </script>
  </body>
</html>
